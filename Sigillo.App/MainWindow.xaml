<metro:MetroWindow x:Class="Sigillo.App.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                   xmlns:vm="clr-namespace:Sigillo.App.ViewModel"
                   xmlns:resx="clr-namespace:Sigillo.Resources;assembly=Sigillo.Resources"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF4"
                   xmlns:models="clr-namespace:Sigillo.App.Models"
                   xmlns:dd="clr-namespace:Sigillo.DragDrop;assembly=Sigillo.DragDrop"
                   xmlns:uc="clr-namespace:Sigillo.App.UserControls"
                   WindowStartupLocation="CenterScreen"
                   SaveWindowPosition="True"
                   ShowIconOnTitleBar="False"
                   Icon="icon.ico"
                   Title="{x:Static resx:Strings.MainWindow_Title}" 
                   MinHeight="750" MinWidth="1000"
                   Height="750" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Sigillo.App;component/Styles/Global.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colours.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedSingleRowTabControl.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <metro:MetroWindow.WindowCommands>
        <metro:WindowCommands>
            <Button Content="{x:Static resx:Strings.Common_Menu}" FontSize="16" Command="{Binding OpenPanelCollection}" />
        </metro:WindowCommands>
    </metro:MetroWindow.WindowCommands>
    <metro:MetroWindow.Flyouts>
        <metro:Flyout x:Name="FlyoutDemoInfo" Header="For Demo Purposes" Position="Left">
            <Grid Margin="24" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="For demostration purposes, please select the patient's age, which will be pre-determined in live system automatically." Style="{StaticResource DefaultTextBlock}" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="16 or Over" Command="{Binding FlyoutDemoInfo16OrOver}" />
                    <Button Grid.Column="1" Content="Below 16" Command="{Binding FlyoutDemoInfoBelow16}" />
                </Grid>
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutLanguageAssessment" Header="{x:Static resx:Strings.LanguageAssessment_Header}" Position="Right">
            <Grid Margin="24" Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="{x:Static resx:Strings.LanguageAssessment_Description}" Style="{StaticResource DefaultTextBlock}" />
                <Button Grid.Column="0" Grid.Row="2" Content="{x:Static resx:Strings.Common_Yes}" Command="{Binding FlyoutLanguageAssessmentYes}" />
                <Button Grid.Column="1" Grid.Row="2" Content="{x:Static resx:Strings.Common_No}" Command="{Binding FlyoutLanguageAssessmentNo}" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutInterpreterDetails" Header="{x:Static resx:Strings.InterpreterDetails_Header}" Position="Right">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static resx:Strings.Common_Surname}" Style="{StaticResource DefaultTextBlockRight}" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="{x:Static resx:Strings.Common_FirstName}" Style="{StaticResource DefaultTextBlockRight}" />
                <TextBlock Grid.Column="0" Grid.Row="2" Text="{x:Static resx:Strings.Common_JobTitle}" Style="{StaticResource DefaultTextBlockRight}" />
                <TextBlock Grid.Column="0" Grid.Row="3" Text="{x:Static resx:Strings.Common_RoleOrRelationship}" Style="{StaticResource DefaultTextBlockRight}" />
                <TextBox Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PersonSurname}" Text="{Binding InterpreterSurname, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=Default}" />
                <TextBox Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PersonFirstName}" Text="{Binding InterpreterFirstName, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=Default}" />
                <TextBox Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PersonJobTitle}" Text="{Binding InterpreterJobTitle, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=Default}" />
                <TextBox Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PersonRoleOrRelationship}" Text="{Binding InterpreterRoleOrRelationship, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=Default}" />
                <CheckBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" IsChecked="{Binding InterpreterIsPresent}">
                    <TextBlock Text="{x:Static resx:Strings.InterpreterDetails_Present}" Style="{StaticResource DefaultTextBlock}" Margin="5,-5,0,0" />
                </CheckBox>
                <Button Grid.Column="2" Grid.Row="6" Content="{x:Static resx:Strings.Common_Save}" Command="{Binding FlyoutInterpreterDetailsSave}" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutPatientCapacity" Header="{x:Static resx:Strings.CapacityTest_Header}" Position="Right">
            <Grid Margin="24" Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="{x:Static resx:Strings.CapacityTest_Description}" Style="{StaticResource DefaultTextBlock}" />
                <Button Grid.Column="0" Grid.Row="2" Content="{x:Static resx:Strings.Common_Yes}" Command="{Binding FlyoutPatientCapacityYes}" />
                <Button Grid.Column="1" Grid.Row="2" Content="{x:Static resx:Strings.Common_No}" Command="{Binding FlyoutPatientCapacityNo}" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutAgeOfConsent" Header="{x:Static resx:Strings.AgeOfConsent_Header}" Position="Right">
            <Grid Margin="24" Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="{x:Static resx:Strings.AgeOfConsent_Description}" Style="{StaticResource DefaultTextBlock}" />
                <TextBlock Grid.ColumnSpan="2" Grid.Row="2" Text="{x:Static resx:Strings.AgeOfConsent_Confrimation}" Style="{StaticResource DefaultTextBlock}" />
                <Button Grid.Column="0" Grid.Row="4" Content="{x:Static resx:Strings.Common_Yes}" Command="{Binding FlyoutAgeOverthrownYes}" />
                <Button Grid.Column="1" Grid.Row="4" Content="{x:Static resx:Strings.Common_No}" Command="{Binding FlyoutAgeOverthrownNo}" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutConsentStage" Header="{x:Static resx:Strings.ConsentStage_Header}" Position="Right">
            <Grid Margin="24" Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="{x:Static resx:Strings.ConsentStage_Description}" Style="{StaticResource DefaultTextBlock}" />
                <Button Grid.Column="0" Grid.Row="2" Content="{x:Static resx:Strings.ConsentStage_StageNormal}" Command="{Binding FlyoutConsentStageNormal}" />
                <Button Grid.Column="1" Grid.Row="2" Content="{x:Static resx:Strings.ConsentStage_StageEmergency}" Command="{Binding FlyoutConsentStageEmergency}" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutProcedureSearch" Header="{x:Static resx:Strings.ProcedureList_Header}" Position="Right">
            <Grid Margin="0,24,0,0" Width="348">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" x:Name="TextBoxProcedureSearch" Margin="24,0,24,0" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" VerticalContentAlignment="Center" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_SearchProcedure}" metro:TextboxHelper.ClearTextButton="True">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged" SourceObject="{Binding ElementName=TextBoxProcedureSearch}">
                            <cmd:EventToCommand Command="{Binding SearchProcedure}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ListBox Grid.Row="2" ItemsSource="{Binding ProceduresSearchResult}" ItemTemplate="{StaticResource DataTemplateProcedures}" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" dd:DragDrop.IsDropTarget="False" dd:DragDrop.IsDragSource="True" />
            </Grid>
        </metro:Flyout>
        <metro:Flyout x:Name="FlyoutAlternativeProcedureSearch" Header="{x:Static resx:Strings.ProcedureList_Header}" Position="Right">
            <Grid Margin="0,24,0,0" Width="348">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" x:Name="TextBoxAlternativeProcedureSearch" Margin="24,0,24,0" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" VerticalContentAlignment="Center" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_SearchProcedure}" metro:TextboxHelper.ClearTextButton="True">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged" SourceObject="{Binding ElementName=TextBoxAlternativeProcedureSearch}">
                            <cmd:EventToCommand Command="{Binding SearchAlternativeProcedure}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ListBox Grid.Row="2" ItemsSource="{Binding AlternativeProceduresSearchResult}" ItemTemplate="{StaticResource DataTemplateAlternativeProcedures}" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" dd:DragDrop.IsDropTarget="False" dd:DragDrop.IsDragSource="True" />
            </Grid>
        </metro:Flyout>
    </metro:MetroWindow.Flyouts>
    <metro:MetroContentControl>
        <Grid>
            <Grid x:Name="PanelQualification" ZIndex="4" Background="White" Opacity="1" Height="150" Visibility="Collapsed">
                <Border BorderBrush="Black" BorderThickness="0 3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" FontSize="20" FontWeight="Black" TextWrapping="Wrap" Text="{x:Static resx:Strings.Qualification_Header}" />
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static resx:Strings.Qualification_Description}" />
                        <Button Grid.Column="1" Grid.Row="5" Content="{x:Static resx:Strings.Common_Yes}" Command="{Binding ConfirmQualification}" />
                        <Button Grid.Column="2" Grid.Row="5" Content="{x:Static resx:Strings.Common_No}" />
                    </Grid>
                </Border>
            </Grid>
            <Canvas x:Name="PanelQualificationOverlay" ZIndex="3" Background="Gray" Opacity="0.5" Visibility="Collapsed" />
            <Grid x:Name="PanelCollection" ZIndex="2" Opacity="1">
                <Grid.Background>
                    <RadialGradientBrush RadiusY="0.844" RadiusX="0.879" Center="0.269,0.107" GradientOrigin="0.269,0.107">
                        <GradientStop Color="{DynamicResource AccentColor}"/>
                        <GradientStop Color="{DynamicResource AccentColor3}" Offset="0.987"/>
                    </RadialGradientBrush>
                </Grid.Background>
                <WrapPanel Margin="40" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <metro:Tile Title="{x:Static resx:Strings.Common_GeneralConsent}" Width="240" Height="120" Background="#A200FF" Command="{Binding OpenGeneralConsent}" />
                    <metro:Tile Title="{x:Static resx:Strings.Common_OneStageConsent}" Width="240" Height="120" Background="#FF0097" />
                    <metro:Tile Title="{x:Static resx:Strings.Common_PostMortemConsent}" Width="240" Height="120" Background="#00ABA9" />
                    <metro:Tile Title="{x:Static resx:Strings.Common_OrganDonationConsent}" Width="240" Height="120" Background="#8CBF26" />
                    <metro:Tile Title="{x:Static resx:Strings.Common_PhotograpicConsent}" Width="240" Height="120" Background="#A05000" />
                    <metro:Tile Title="{x:Static resx:Strings.Common_BloodTranfusionConsent}" Width="240" Height="120" Background="#E671B8" />
                </WrapPanel>
            </Grid>
            <Canvas x:Name="PanelCollectionOverlay" ZIndex="1" Background="Black" Opacity="0.5" />
            <Grid x:Name="PanelProcess">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TabControl Grid.Row="0" x:Name="SectionWorkingArea">
                    <TabItem x:Name="SectionPatientDetails" Header="{x:Static resx:Strings.PatientDetails_Header}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="5"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Header="{x:Static resx:Strings.PatientDetails_Title}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"></ColumnDefinition>
                                        <ColumnDefinition Width="20"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" ></RowDefinition>
                                        <RowDefinition Height="10" ></RowDefinition>
                                        <RowDefinition Height="Auto" ></RowDefinition>
                                        <RowDefinition Height="10" ></RowDefinition>
                                        <RowDefinition Height="Auto" ></RowDefinition>
                                        <RowDefinition Height="10" ></RowDefinition>
                                        <RowDefinition Height="Auto" ></RowDefinition>
                                        <RowDefinition Height="10" ></RowDefinition>
                                        <RowDefinition Height="60" ></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static resx:Strings.Common_Surname}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="{x:Static resx:Strings.Common_FirstName}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="4" Text="{x:Static resx:Strings.Common_DOB}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="6" Text="{x:Static resx:Strings.Common_NHSNumber}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="8" Text="{x:Static resx:Strings.Common_SpecialRequirements}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBox Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PatientSurname}" Text="{Binding PatientSurname}" IsReadOnly="True" />
                                    <TextBox Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PatientFirstName}" Text="{Binding PatientFirstName}" IsReadOnly="True" />
                                    <TextBox Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PatientDOB}" Text="{Binding PatientDOB, StringFormat='dd-MMM-yyyy'}" IsReadOnly="True" />
                                    <TextBox Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PatientNHSNumber}" Text="{Binding PatientNHSNumber}" IsReadOnly="True" />
                                    <TextBox Grid.Column="2" Grid.Row="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_PatientSpecialRequirements}" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Header="{x:Static resx:Strings.HealthProfessionalDetails_Title}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"></ColumnDefinition>
                                        <ColumnDefinition Width="20"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" ></RowDefinition>
                                        <RowDefinition Height="30" ></RowDefinition>
                                        <RowDefinition Height="30" ></RowDefinition>
                                        <RowDefinition Height="30" ></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static resx:Strings.Common_Surname}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="{x:Static resx:Strings.Common_FirstName}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="{x:Static resx:Strings.Common_JobTitle}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBlock Grid.Column="0" Grid.Row="3" Text="{x:Static resx:Strings.Common_ContactNumber}" Style="{StaticResource DefaultTextBlockRight}" />
                                    <TextBox x:Name="TextBoxHealthProfessionalSurname" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_HealthProfessionalSurname}" Text="{Binding HealthProfessionalSurname}" IsReadOnly="True" />
                                    <TextBox x:Name="TextBoxHealthProfessionalFirstName" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_HealthProfessionalFirstName}" Text="{Binding HealthProfessionalFirstName}" IsReadOnly="True" />
                                    <TextBox x:Name="TextBoxHealthProfessionalJobTitle" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_HealthProfessionalJobTitle}" Text="{Binding HealthProfessionalJobTitle}" IsReadOnly="True" />
                                    <TextBox x:Name="TextBoxHealthProfessionalContactNumber" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" metro:TextboxHelper.Watermark="{x:Static resx:Strings.Watermark_HealthProfessionalContactNumber}" Text="{Binding HealthProfessionalContactNumber, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=Default}" />
                                </Grid>
                            </GroupBox>
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="1" Content="{x:Static resx:Strings.Common_Next}" Command="{Binding SectionPatientDetailsNext}" />
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="SectionProceduresDetails" Header="{x:Static resx:Strings.ProcedureDetails_Header}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="5"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="5"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="{x:Static resx:Strings.Common_AddProcedures}" Command="{Binding OpenProcedures}" />
                                <Button Grid.Column="1" Content="{x:Static resx:Strings.Common_AddAlternativeProcedures}" Command="{Binding OpenAlternativeProcedures}" />
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"></ColumnDefinition>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <GroupBox Grid.Column="0" Header="{x:Static resx:Strings.ProceduresSelected_Title}">
                                    <TreeView x:Name="TreeViewProceduresSelected" BorderThickness="0" ItemsSource="{Binding ProceduresSelected}" MouseRightButtonDown="TreeView_OnMouseRightButtonDown" SelectedItemChanged="TreeView_OnSelectedItemChanged" dd:DragDrop.IsDropTarget="True" dd:DragDrop.IsDragSource="True" >
                                        <TreeView.ItemContainerStyle>
                                            <Style TargetType="{x:Type TreeViewItem}">
                                                <Setter Property="IsSelected" Value="{Binding ProceduresProposedIsSelected, Mode=TwoWay}"></Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TreeView.ItemContainerStyle>
                                        <TreeView.Resources>
                                            <HierarchicalDataTemplate ItemsSource="{Binding AlternativeProcedures}" DataType="{x:Type models:ProcedureModel}">
                                                <Label Content="{Binding Name}"/>
                                            </HierarchicalDataTemplate>
                                            <DataTemplate DataType="{x:Type models:AlternativeProcedureModel}">
                                                <Label Content="{Binding Name}"/>
                                            </DataTemplate>
                                        </TreeView.Resources>
                                    </TreeView>
                                </GroupBox>
                                <Grid Grid.Column="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <GroupBox Grid.Row="0" Header="{x:Static resx:Strings.Common_Details}">
                                        <Grid Margin="5" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Name="ProcedureSelectedName" Style="{StaticResource DefaultTextBlock}" Foreground="Black" FontSize="30" Margin="0,0,0,5" Text="{x:Static resx:Strings.Common_ProcedureName}" />
                                            <TextBlock Grid.Row="1" Style="{StaticResource DefaultTextBlock}" FontWeight="Bold" Text="{x:Static resx:Strings.Common_Description}" Margin="0,0,0,5" />
